extends ../welcomeTemp

block variables
	- var title = "Welcome"

block content
	a(href="login.html").btn.btn_auth Авторизоваться

	.welcome
		.welcome__top
			.user
				.user__pic.user__pic_welcome
					img(src="/assets/img/user.jpg" alt="user photo").user__img
				.user__title_welcome Александр Воробей
				.user__desc_welcome Личный сайт веб разработчика

			ul.socials_welcome
				li.socials__item
					a(href="src=#").socials__link wk
						svg(class="icon icon_header icon_blue")
							use(xlink:href="/assets/img/sprite.svg#vk")
				li.socials__item
					a(href="src=#").socials__link git
						svg(class="icon icon_header icon_blue")
							use(xlink:href="/assets/img/sprite.svg#github")
				li.socials__item
					a(href="src=#").socials__link in
						svg(class="icon icon_header icon_blue")
							use(xlink:href="/assets/img/sprite.svg#in")
			.buttons-wrapper
				a(href="works.html").btn.btn_form.btn_form-left Мои работы
				a(href="about.html").btn.btn_form.btn_form-mid Обо мне
				a(href="blog.html").btn.btn_form.btn_form-right Блог


